@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["Bots constructor"];
}
<script src="~/lib/jquery/dist/jquery.js"></script>
<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
  <h1 class="display-4">@Localizer["Pricing"]</h1>
  <p class="lead">@Localizer["Description"]</p>
</div>

<div class="container">
  <div class="card-deck mb-3 text-center">
    <div class="card mb-4 shadow-sm">
      <div class="card-header">
        <h4 class="my-0 font-weight-normal">Free</h4>
      </div>
      <div class="card-body">
        <h1 class="card-title pricing-card-title">$0 <small class="text-muted">/ @Localizer["month"]</small></h1>
        <ul class="list-unstyled mt-3 mb-4">
          <li>@Localizer["1bot"]</li>
          <li>@Localizer["noMassMailing"]</li>
          <li>@Localizer["advertisingMessage"]</li>
          <li>@Localizer["limitedNumberOfMessages"]</li>
        </ul>
        <button type="button" class="btn btn-lg btn-block btn-outline-primary">@Localizer["signUp"]</button>
      </div>
    </div>
    <div class="card mb-4 shadow-sm">
      <div class="card-header">
        <h4 class="my-0 font-weight-normal">Pro</h4>
      </div>
      <div class="card-body">
        <h1 class="card-title pricing-card-title">$1 <small class="text-muted">/ @Localizer["month"]</small></h1>
        <ul class="list-unstyled mt-3 mb-4">
          <li>@Localizer["1bot"]</li>
          <li>@Localizer["massMailing"]</li>
          <li>@Localizer["feedbackFunction"]</li>
          <li>@Localizer["unlimitedMessages"]</li>
        </ul>
        <button type="button" class="btn btn-lg btn-block btn-primary">@Localizer["tryIt"]</button>
      </div>
    </div>
    <div class="card mb-4 shadow-sm">
      <div class="card-header">
        <h4 class="my-0 font-weight-normal">Enterprise</h4>
      </div>
      <div class="card-body">
        <h1 class="card-title pricing-card-title">$10 <small class="text-muted">/ @Localizer["month"]</small></h1>
        <ul class="list-unstyled mt-3 mb-4">
          <li>@Localizer["20bots"]</li>
          <li>@Localizer["massMailing"]</li>
          <li>@Localizer["feedbackFunction"]</li>
          <li>@Localizer["unlimitedMessages"]</li>
        </ul>
        <button type="button" class="btn btn-lg btn-block btn-primary">@Localizer["getStarted"]</button>
      </div>
    </div>
  </div>

 
</div>