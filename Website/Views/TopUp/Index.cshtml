
@{
    ViewData["Title"] = "Index";
    Layout = "_LayoutHome";
}

    <div class="container">
        <form method="GET" asp-action="Pay">
            <div class="form-group">
                <label for="amount">Укажите сумму, на которую Вы хотите пополнить счёт</label>
                <div class="input-group">
                    <input id="amount" class="form-control" type="number" min="0" max="100" step="0.01" name="amount" value="1">
                    <div class="input-group-append">
                        <span id="currency" class="input-group-text">$</span>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-success">Оплатить</button>
        </form>
    </div>
